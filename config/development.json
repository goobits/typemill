{
  "server": {
    "host": "0.0.0.0",
    "port": 3000,
    "maxClients": 10,
    "timeoutMs": 120000
  },
  "lsp": {
    "servers": [
      {
        "extensions": ["ts", "tsx", "js", "jsx"],
        "command": ["typescript-language-server", "--stdio"],
        "restartInterval": 10
      },
      {
        "extensions": ["py"],
        "command": ["pylsp"],
        "restartInterval": 5
      }
    ],
    "defaultTimeoutMs": 30000,
    "enablePreload": true
  },
  "fuse": {
    "mountPoint": "/tmp/codeflow-mounts",
    "readOnly": false,
    "cacheTimeoutSeconds": 60,
    "maxFileSizeBytes": 10485760
  },
  "logging": {
    "level": "debug",
    "format": "pretty"
  },
  "cache": {
    "enabled": true,
    "ttlSeconds": 3600,
    "maxSizeBytes": 268435456,
    "persistent": false
  }
}