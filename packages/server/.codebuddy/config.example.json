{
  "servers": [
    {
      "extensions": ["ts", "tsx", "js", "jsx"],
      "command": ["typescript-language-server", "--stdio"],
      "restartInterval": 10
    },
    {
      "extensions": ["py"],
      "command": ["pylsp"]
    }
  ],
  "serverOptions": {
    "enablePredictiveLoading": true,
    "predictiveLoadingDepth": 0,
    "predictiveLoadingExtensions": [".ts", ".tsx", ".js", ".jsx", ".mjs", ".cjs"]
  }
}